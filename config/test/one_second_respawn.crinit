# Example hello world config

NAME = one_second_respawn

COMMAND[] = /bin/sleep 1
COMMAND[] = /bin/sh -c "echo 'A second is over. (This task should be finished and respawn every 1s.)' | tee -a /tmp/crinit-one_second_respawn.log"

DEPENDS = "after_sleep:spawn @ctl:enable"

RESPAWN = YES
# features below not yet implemented
EXEC = NO
QM_JAIL = NO
SIG = ""
